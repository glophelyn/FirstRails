<div class="container">
  <h1>Task Details</h1>

  <p><strong>Title:</strong> <%= @task.title %></p>
  <p><strong>Completed:</strong> <%= @task.completed ? "Yes" : "No" %></p>

  <div class="btn-group">
    <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-edit" %>
    <%= link_to "Back to Tasks", tasks_path, class: "btn btn-back" %>
    <%= button_to "Delete Task", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
  </div>
</div>
