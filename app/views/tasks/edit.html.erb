<div class="container">
  <h1>Editing Task</h1>

  <%= form_with(model: @task, local: true, html: { class: "task-form" }) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "input-field" %>
    </div>

    <div class="form-group">
      <%= form.label :completed %>
      <%= form.check_box :completed, class: "checkbox" %>
    </div>

    <div class="btn-group">
      <%= form.submit "Update Task", class: "btn btn-edit" %>
      <%= link_to "Back to tasks", tasks_path, class: "btn btn-back" %>
    </div>
  <% end %>
</div>
